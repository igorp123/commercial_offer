<%= form_with model: @offer do |f| %>
  <div class="mb-3 row">
    <%= f.label :client, class: 'col-sm-2 col-form-label' %>

    <div class="col-sm-10">
      <%= f.text_field :client, required: true, minlength: 2, placeholder: 'Client',
        class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :body, class: 'col-sm-2 col-form-label' %>

    <div class="col-sm-10">
      <%= f.text_area :body, required: true, minlength: 2,
        placeholder: 'Put text here', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :amount, class: 'col-sm-2 col-form-label' %>

    <div class="col-sm-10">
      <%= f.text_field :amount, class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :comment, class: 'col-sm-2 col-form-label' %>

    <div class="col-sm-10">
      <%= f.text_area :comment, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit 'Submit offer', class: 'btn btn-primary' %>
  <%= link_to 'Back to all offers', offers_path, class: 'btn btn-secondary' %>
 <% end %>
